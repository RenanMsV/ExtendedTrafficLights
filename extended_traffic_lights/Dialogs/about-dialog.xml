<?xml version="1.0"?>
<PropertyList>
    <name>extended_traffic_lights_about</name>
    <layout>vbox</layout>
    <resizable>false</resizable>

    <group>
    <layout>hbox</layout>
    <text>
      <label>About</label>
      <halign>right</halign>
    </text>

    <button>
        <halign>right</halign>
        <pref-width>16</pref-width>
        <pref-height>16</pref-height>
        <legend>X</legend>
        <binding>
            <command>dialog-close</command>
        </binding>
        </button>
    </group>

    <group>
        <layout>vbox</layout>

        <group>
            <layout>hbox</layout>

            <group>
                <layout>hbox</layout>

            <canvas>
                <name>about</name>
                <valign>center</valign>
                <halign>center</halign>
                <stretch>false</stretch>
                <width>200</width>
                <height>139</height>
                <pref-width>200</pref-width>
                <pref-height>139</pref-height>

                 <nasal>
                    <load>
                        <![CDATA[

                            # you can add your canvas-specific code here
                            # this will get a handle to the parent canvas
                            var my_canvas = canvas.get(cmdarg());

                            var root = my_canvas.createGroup();
                            var path = getprop("/sim/fg-root") ~ "/Nasal/ambient_editor/dialogs/amb-editor.png";
                            var child = root.createChild("image")
                                .setFile(path)
                                .setSize(200, 139)
                                .setTranslation(2,2);
                        ]]>
                    </load>
                </nasal>

            </canvas>

            </group>

            <group>
                <layout>vbox</layout>
                <textbox>
                    <name>authors</name>
                    <halign>fill</halign>
                    <stretch>true</stretch>
                    <width>150</width>
                    <height>139</height>
                    <pref-width>150</pref-width>
                    <pref-height>139</pref-height>
                    <editable>false</editable>
                    <wrap>true</wrap>
                    <live>true</live>
                    <top-line>0</top-line>
                    <property>/sim/addons/extended-traffic-lights/about</property>
                </textbox>
            </group>
    </group>
</group>

</PropertyList>