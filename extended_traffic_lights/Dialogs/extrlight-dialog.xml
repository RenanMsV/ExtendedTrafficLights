<?xml version="1.0"?>
<PropertyList>
  <name>extended_traffic_lights_dialog</name>
  <layout>vbox</layout>
  <!--width>285</width-->
  <resizable>false</resizable>

  <group>
    <layout>hbox</layout>
    <text>
      <halign>right</halign>
      <label>Extended Traffic Lights</label>
    </text>

    <button>
      <halign>right</halign>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend>?</legend>
      <binding>
        <command>dialog-show</command>
        <dialog-name>extended_traffic_lights_about</dialog-name>
      </binding>
    </button>

    <button>
      <halign>right</halign>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend>X</legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <checkbox>
    <label>Enable / Disable</label>
    <live>true</live>
    <halign>left</halign>
    <property>sim/addons/extended-traffic-lights/enable</property>
    <binding>
      <command>dialog-apply</command>
    </binding>
  </checkbox>

  <checkbox>
    <label>Show info label (callsign, model, speed, altitude...) - DISABLED</label>
    <live>true</live>
    <halign>left</halign>
    <property>sim/addons/extended-traffic-lights/show-label</property>
    <binding>
      <command>dialog-apply</command>
    </binding>
  </checkbox>

  <text>
    <label>http://flightgearbrasil.com.br</label>
  </text>

</PropertyList>